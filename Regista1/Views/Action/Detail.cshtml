@using Regista.Domain.Dto.Entities.ActionModels;
@model ActionPageDTO

@{
    ViewData["Title"] = "Detail";
}

<div class="main-content">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                </div>
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">
                        <h3>Talep Detayları</h3>
                        <div class="card-body">
                            <div class="row">
                                <input asp-for="ID" type="hidden" />
                                <div class="col-md-6">
                                    <div class="form-group row ">
                                        <label style="font-weight:bold;" class="col-md-2 col-form-label">Sorumlu</label>
                                        <div class="col-md-9">
                                            <input readonly id="Name" asp-for="ReponsibleID" type="text" class="form-control"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label style="font-weight:bold;" class="col-md-2 col-form-label">Talep No</label>
                                        <div class="col-md-9">
                                            <input readonly asp-for="RequestID" type="text" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label style="font-weight:bold;" class="col-md-2 col-form-label">Başlangıç Tarihi</label>
                                        <div class="col-md-9">
                                            <input readonly asp-for="OpeningDate" type="date" class="form-control"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label style="font-weight:bold;" class="col-md-2 col-form-label">Bitiş Tarihi</label>
                                        <div class="col-md-9">
                                            <input readonly asp-for="EndDate" type="date"class="form-control"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label style="font-weight:bold;" class="col-md-2 col-form-label">Açıklama</label>
                                        <div class="col-md-9">
                                            <textarea readonly asp-for="Description" type="text" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label style="font-weight:bold;" class="col-md-2 col-form-label">Durum</label>
                                        <div class="col-md-9">
                                            <input readonly asp-for="ActionStatus" type="text"  class="form-control"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
